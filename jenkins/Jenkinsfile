pipeline {
    agent any
    
    environment {
        DOCKERHUB_CREDENTIALS = credentials('docker-hub-credentials')
        MONGODB_URI = credentials('mongodb-uri')
    }
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/your-username/foodblog-app.git'
            }
        }
        
        stage('Install Dependencies') {
            parallel {
                stage('Frontend Dependencies') {
                    steps {
                        dir('frontend') {
                            sh 'npm ci'
                        }
                    }
                }
                stage('Backend Dependencies') {
                    steps {
                        dir('backend') {
                            sh 'npm ci'
                        }
                    }
                }
            }
        }
        
        stage('Build') {
            parallel {
                stage('Build Frontend') {
                    steps {
                        dir('frontend') {
                            sh 'npm run build'
                        }
                    }
                }
                stage('Backend Lint') {
                    steps {
                        dir('backend') {
                            sh 'node -c app.js'
                        }
                    }
                }
            }
        }
        
        stage('Build Docker Images') {
            steps {
                script {
                    docker.build("your-dockerhub-username/foodblog-frontend:${env.BUILD_ID}", "./frontend")
                    docker.build("your-dockerhub-username/foodblog-backend:${env.BUILD_ID}", "./backend")
                }
            }
        }
        
        stage('Push Docker Images') {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'docker-hub-credentials') {
                        docker.image("your-dockerhub-username/foodblog-frontend:${env.BUILD_ID}").push()
                        docker.image("your-dockerhub-username/foodblog-backend:${env.BUILD_ID}").push()
                    }
                }
            }
        }
        
        stage('Deploy') {
            steps {
                sh 'docker-compose down || true'
                sh 'docker-compose up -d'
                sh 'sleep 30'
                sh 'curl -f http://localhost:3000 || exit 1'
                sh 'curl -f http://localhost:5000/health || exit 1'
            }
        }
    }
    
    post {
        always {
            cleanWs()
        }
        success {
            emailext (
                subject: "SUCCESS: FoodBlog Deployment ${env.BUILD_NUMBER}",
                body: """
                FoodBlog has been successfully deployed!
                
                Build URL: ${env.BUILD_URL}
                Frontend: http://localhost:3000
                Backend API: http://localhost:5000
                Health Check: http://localhost:5000/health
                """,
                to: "developer@example.com"
            )
        }
        failure {
            emailext (
                subject: "FAILED: FoodBlog Deployment ${env.BUILD_NUMBER}",
                body: """
                FoodBlog deployment failed!
                
                Build URL: ${env.BUILD_URL}
                Please check the Jenkins logs for details.
                """,
                to: "developer@example.com"
            )
        }
    }
}